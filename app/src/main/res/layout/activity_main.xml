<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="電話號碼："
            android:textColor="@color/colorPrimary"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/B01"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="1" />

            <Button
                android:id="@+id/B02"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="2" />

            <Button
                android:id="@+id/B03"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/B04"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="4" />

            <Button
                android:id="@+id/B05"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="5" />

            <Button
                android:id="@+id/B06"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/B07"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="7" />

            <Button
                android:id="@+id/B08"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="8" />

            <Button
                android:id="@+id/B09"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/B10"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="*" />

            <Button
                android:id="@+id/B00"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0" />

            <Button
                android:id="@+id/B11"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="#" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BClear"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="修正" />
            <Button
                android:id="@+id/BClearAll"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="清除" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>